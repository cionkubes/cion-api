[
  {
    "name": "environments",
    "primary_key": "name",
    "document": [
      {
        "name": "test",
        "sign": false,
        "mode": "from_env",
        "tag-match": "\\d+\\.\\d+\\.\\d+-rc.*",
        "tls": {
          "ca": "/run/secrets/ca.pem",
          "cert": "/run/secrets/qa.cert.pem",
          "key": "/run/secrets/qa.key.pem",
          "url": "tcp://10.68.4.60:2376"
        }
      }
    ]
  },
  {
    "name": "repos",
    "editable": true,
    "primary_key": "user",
    "document": [
      {
        "user": "tiptk",
        "repos": [
          {
            "repo": "tipimages",
            "glob": "(tiptk)/tipimages:(.*)_(.*)",
            "login": "/var/run/secrets/tip_user.json"
          }
        ]
      }
    ]
  },
  {
    "name": "services",
    "primary_key": "name",
    "document": [
      {
        "name": "test",
        "environments": [
          "prod"
        ],
        "image-name": "cion_test"
      }
    ]
  },
  {
    "name": "webhooks",
    "editable": true,
    "document": [
      {
        "url": "http://webhook.site/358478a3-a6cc-43fb-8225-b1dcf0c71fb5",
        "event": "new-image",
        "on": {
          "image-name": "crccheck/.*"
        },
        "headers": {
          "Content-Type": "application/json",
          "Via": "cionkubes.com"
        },
        "data": "{{'image': '{image-name}'}}"
      }
    ]
  },
  {
    "name": "delayed_tasks",
    "editable": true
  }
]
